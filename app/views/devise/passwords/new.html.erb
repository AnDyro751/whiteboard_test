<%= render FormWrapperComponent.new(title: I18n.t("devise.passwords.forgot_your_password")) do %>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: label_class %><br/>
      <%= f.email_field :email, autofocus: true,class: "#{input_class} mt-2", autocomplete: "email" %>
    </div>

    <div class="actions">
      <%= f.submit I18n.t('devise.passwords.send_me_reset_password_instructions'), class: "#{color_button} mt-4" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
<% end %>

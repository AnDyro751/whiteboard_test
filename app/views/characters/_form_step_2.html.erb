<h1>Ingresa el color de <strong> <%= @character.name %></strong></h1>

<%= form_with(model: character, url: {action: "next_step"}, data: {remote: true}) do |form| %>
  <div class="field">
    <%= form.label :color %>
    <%= form.select :color, Character.valid_colors %>
  </div>
  <%= form.hidden_field :step, value: 2 %>
  <div class="actions">
    <%= form.submit I18n.t("next") %>
  </div>
<% end %>